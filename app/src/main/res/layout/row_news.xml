<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rowSenderProfilePic"
                android:src="@drawable/profile_pic"
                app:riv_corner_radius="30dip"
                app:riv_border_width="1dp"
                android:layout_height="50dp"
                android:layout_width="50dp"
                app:riv_border_color="#363147"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"
                app:riv_oval="true"
                android:layout_gravity="center_vertical">
            </com.makeramen.roundedimageview.RoundedImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:weightSum="2.0"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/rowSenderUsername"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#363147"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="username"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:textSize="12sp"
                    android:id="@+id/news_time_text"
                    android:gravity="center_vertical"
                    android:text="date"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#c6cbcf"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">
        </View>

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rowReceiverProfilePic"
            android:src="@drawable/profile_pic"
            app:riv_corner_radius="30dip"
            app:riv_border_width="3dp"
            android:layout_height="180dp"
            android:layout_width="180dp"
            app:riv_border_color="#363147"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="true"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rowReceiverUsername"
            android:text="username"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#363147"
            android:textSize="14sp"
            android:padding="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="3.0"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/rowFirstWord"
                android:text="@string/hint1"
                android:textSize="18sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/rowSecondWord"
                android:text="@string/hint1"
                android:textSize="18sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/rowThirdWord"
                android:text="@string/hint1"
                android:textSize="18sp"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>